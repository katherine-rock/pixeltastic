<section class="welcome">
    <h2>Welcome to Pixeltastic!</h2>
    <p>An easy to use, stock photography website for creative photographers to sell their photos.</p>
    <p>Here are the latest additions to our collection.</p>
</section>

<section class="main">
    <div class="row">
        <% @photos.each do | photo | %>
            <div class="card" style="width: 18rem;">
            <%= image_tag photo.image, class: "card-img-top" %>

            <div class="card-body">
                <strong>Title: </strong><%= photo.title %>
                <br>
                <% if photo.category? %>
                <strong>Category: </strong><%= photo.category %>
                <% else %>
                <&nbsp;;>
                <% end %>
                <br>
                <strong>Price: $</strong><%= photo.price %>
                <br>

            <button type="button" class="btn btn-primary">
                <%= link_to 'Learn More', photo %>
            </button>

                </div>
        </div>

    </div>  
    <% end %>  
</div>

</section>

<div class="center">
    <button type="button" class="btn btn-primary">
    <%= link_to 'View More Photos', photos_path %>
    </button>
</div>